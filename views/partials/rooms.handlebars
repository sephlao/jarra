<div class="columns">
    {{#each rooms}}
    <div class="column">
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    {{this.imgURL}}
                    <img src="/img/uploads/room/{{this.imgURL}}" alt="{{this.name}}">
                </figure>
            </div>
            <div class="card-content">
                <div class="content">
                    <div class="media-content">
                        <a href="/rooms/{{this.id}}">
                            <p class="title is-4 is-spaced content-name">{{this.name}}</p>
                        </a>
                        <p class="subtitle is-6 content-location">{{this.location}}</p>
                    </div>
                </div>

                <div class="content extended-info">
                    <p class="content-text">{{this.text}}</p>
                    <strong class="content-price">${{this.price}}/night</strong>
                    <strong class="content-rating"><span>{{this.rating}}</span> <img src="/img/star-solid.svg"
                            alt="star"></strong>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>